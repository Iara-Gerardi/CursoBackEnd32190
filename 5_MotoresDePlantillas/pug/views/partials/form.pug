div(class="flex flex-col absolute top-0 justify-items-center items-center w-full h-full bg-red-50 gap-12")    
    h1(class="text-rose-700 font-extrabold text-4xl") Nuevo producto
    form(action="/api/products", method="post" class="flex flex-col gap-2 justify-items-center")
            div(class="flex flex-col gap-2")
                label(for="title" class="text-amber-600 font-bold") Titulo
                input(class="rounded-md border-none" type="text", name="title", placeholder="titulo")
            div(class="flex flex-col gap-2")
                label(for="price" class="text-amber-600 font-bold") Precio
                input(class="rounded-md border-none" type="text", name="price", placeholder="Precio")
            div(class="flex flex-col gap-2")
                label(for="thumbnail" class="text-amber-600 font-bold") Foto
                input(class="border-none" type="file", name="thumbnail")
            button(class="rounded-md bg-rose-700 w-16 text-slate-50") Enviar